<h1>Books Page</h1>

<div class="row">
  <div class="col-md-5">
    <a href="/books/new" class="btn btn-success">New Book</a>
    {{#each books}}
    <div class="well">
      
      <a href="/books/{{_id}}"><h3>{{name}} {{author}}</h3></a>
      <div>$ {{price}}</div>
      <div>{{lastUpdated}}</div>

      <div>
        <form method="POST" action="/books/delete/{{_id}}">
          <button class="btn btn-sm btn-danger">Delete</button>
        </form>
      </div>
    </div>
    <hr/> {{/each}}
  </div>
</div>